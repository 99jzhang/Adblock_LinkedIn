{
    "manifest_version": 3,
    "name": "LinkedIn AdBlocker",
    "description": "Blocking ads on LinkedIn Desktop Broswer.",
    "version": "1.0.0",
    "author": "Jonathan Zhang",
    "permissions": [
        "scripting",
        "activeTab",
        "tabs",
        "webNavigation"
    ],
    "host_permissions": [
        "https://www.linkedin.com/",
        "<all_urls>",
        "*://*/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["https://www.linkedin.com/*"],
            "js": ["linkedin.js"],
            "run_at": "document_idle"
        }
    ]
}